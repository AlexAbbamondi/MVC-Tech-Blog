
{{#each posts as |post|}}

<div class="col-8 mt-5">
    <a href="/dashboard/edit/{{post.id}}">
        <div class="card">
            <div class="card-header custom-card-header">
            <h3>{{post.title}}</h3> <span>Posted by {{post.user.username}}</span>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.body}}</p>
            </div>
        </div>
    </a>
</div>
{{/each}}



<div class="col-8 text-center mt-5">
    <a href="dashboard/new"><button type="submit" class="btn new-post-button">New Post</button></a>
</div>