{{!-- display all posts on homepage --}}
{{#each posts as |post|}}
<div class="col-8 pt-5">
    <a href="/post/{{post.id}}">
        <div class="card">
            <div class="card-header custom-card-header">
            <h3>{{post.title}}</h3> <span>Posted by {{post.user.username}}</span>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.body}}</p>
            </div>
        </div>
    </a>
</div>
{{/each}} 